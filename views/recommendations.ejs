    <div class="container mt-4">
        <h1 class="display-4 text-center ydr">Your Dietary Recommendations</h1>
        <!-- Recommendations container where the list of recommendations will be displayed -->
        <div id="recommendations-container" class="mt-3">
            <!-- Check if there are any recommendations to display -->
            <% if(recommendations && recommendations.length > 0) { %>
                <ul class="list-group">
                    <!-- Iterate over each recommendation and display it as a list item -->
                    <% recommendations.forEach(function(rec, index) { %>
                        <% if (index < 6) { %>
                            <li class="list-group-item"><%= rec %></li>
                        <% } %>
                    <% }); %>
                </ul>
            <% } else { %>
                <!-- Message displayed if there are no recommendations -->
                <div class="alert alert-info" role="alert">
                    No recommendations available. Please adjust your dietary preferences.
                </div>
            <% } %>
        </div>
