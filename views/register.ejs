        <select name="usertype">
          <!-- <option value="Admin">Admin</option>
          <option value="Manager">Manager</option> -->
          <option value="User">User</option>
        </select>
      </div>

      <!-- Register Button -->
      <div class="action d-flex justify-content-center pt-3">
        <button class="btn btns btn-lg ms-2">Register</button>
      </div>
    </div>
