<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Register</title>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:400,700'>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      -webkit-font-smoothing: antialiased;
    }
    
body {
  
  background-image: url("https://caspiannews.com/media/caspian_news/all_original_photos/1528831479_7183783_1528831390_5761793SFF-Foto-2018-001web2.jpg");
  background-repeat: no-repeat;
  width: 100%;
  max-height: 100%;
}

.login-form {
  background: #f0d771;
  width: 500px;
  margin: 50px auto;
  display: flex;
  flex-direction: column;
  border-radius: 4px;
}
    
.login-form h1 {
  padding: 35px 35px 0 35px;
  font-weight: bold;
  text-align: center;
  font-family: 'Arial', sans-serif;
  font-style: normal;
}

    
    .login-form .content {
      padding: 35px;
      text-align: center;
    }
    
    .login-form .input-field {
      padding: 12px 5px;
    }
    
    .error {
      text-align: center;
    }
    
    .login-form .input-field input {
      font-size: 16px;
      display: block;
      font-family: 'Rubik', sans-serif;
      width: 100%;
      padding: 10px 1px;
      border: 0;
      border-bottom: 1px solid #747474;
      outline: none;
      -webkit-transition: all .2s;
      transition: all .2s;
    }
    
    .login-form .input-field input::-webkit-input-placeholder {
      text-transform: uppercase;
    }
    
    .login-form .input-field input::-moz-placeholder {
      text-transform: uppercase;
    }
    
    .login-form .input-field input:-ms-input-placeholder {
      text-transform: uppercase;
    }
    
    .login-form .input-field input::-ms-input-placeholder {
      text-transform: uppercase;
    }
    
    .login-form .input-field input::placeholder {
      text-transform: uppercase;
    }
    
    .login-form .input-field input:focus {
      border-color: #222;
    }
    
    .login-form p {
      font-size: small;
      text-decoration: none;
      color: #1d1d1d;
      letter-spacing: 0.2px;
      text-transform: uppercase;
      display: inline-block;
      margin-top: 20px;
    }
    
    .login-form a.link {
      text-decoration: none;
      color: #4d0dc4;
      letter-spacing: 0.2px;
      text-transform: uppercase;
      display: inline-block;
      margin-top: 20px;
    }
    
    .login-form .action {
      display: flex;
      flex-direction: row;
    }
    
    .login-form .action button {
  width: 100%;
  border: none;
  padding: 18px;
  font-family: 'Rubik', sans-serif;
  cursor: pointer;
  text-transform: uppercase;
  background: #fa958c;
  color: #fff;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 0;
  letter-spacing: 0.2px;
  outline: 0;
  transition: all .3s;
}

.login-form .action button:hover {
  background: #0056b3;
}

.login-form .action button:nth-child(2) {
  background: #e8e9ec;
  color: #777;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 4px;
}

.login-form .action button:nth-child(2):hover {
  background: #d8d8d8;
}

  </style>
</head>
<body>

  <div class="login-form">
    <form action="/register" method="post" name="register">
      <h1>Register</h1>
      <div class="error">
        <% if (typeof errorMessage !== 'undefined') { %>
          <p style="color: red;"><%= errorMessage %></p>
        <% } %>
      </div>
      <div class="content">
        <div class="input-field">
          <input type="email" placeholder="Email" id="email" name="email">
        </div>
        <div class="input-field">
          <input type="password" placeholder="Password" id="password" name="password">
        </div>
        <input type="checkbox" onclick="myFunction()">Show Password
            <script>
            function myFunction() {
              var x = document.getElementById("password");
              if (x.type === "password") {
                x.type = "text";
              } else {
                x.type = "password";
              }
            }
            </script>
        <div class="input-field">
          <!-- <label for="usertype">Choose User Type:</label> -->
          <select name="usertype">
            <!-- <option value="Admin">Admin</option>
            <option value="Manager">Manager</option> -->
            <option value="User">User</option>
          </select>
        </div>
        <p>Already have an Account? <a href="/login" class="link">Login Here</a></p>
      </div>
      <div class="action">
        <button>Register</button>
      </div>
    </form>
  </div>
  
</body>
</html>
