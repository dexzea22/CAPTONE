<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recommendations | Maya&Me</title>
  <link rel="stylesheet" href="/stylesheets/style.css"> <!-- Update with your correct stylesheet path -->
</head>
<body>
  <div class="container mt-4">
    <h1>Your Personalized Food Recommendations</h1>
    <div class="row">
      <% if(recommendations.length > 0) { %>
        <% recommendations.forEach(function(item) { %>
          <div class="col-md-4">
            <div class="card">
              <img src="<%= item.imageUrl %>" class="card-img-top" alt="<%= item.name %>">
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= item.description %></p>
                <p class="card-text">Price: $<%= item.price %></p>
                <a href="/order/<%= item.id %>" class="btn btn-primary">Order Now</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No recommendations available. Try updating your dietary preferences.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
